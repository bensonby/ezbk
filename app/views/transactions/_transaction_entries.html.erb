<table class="transaction-list">
  <tr>
    <th></th>
    <th></th>
    <th>Transaction Date</th>
    <th>Transaction Description</th>
    <th>Account</th>
    <th>Debit Amount</th>
  </tr>
<% if transactions.each do |transaction| %>
  <tr class="transaction-info">
    <td><div class="button"><%= link_to edit_icon, edit_transaction_path(transaction) %></div></td>
    <td><div class="button"><%= link_to destroy_icon, transaction, :confirm => 'Are you sure?', :method => :delete %></div></td>
    <td class="date"><%= transaction.transaction_date %></td>
    <td class="description"><%= transaction.description %></td>
    <td></td>
    <td></td>
  </tr>
  <% transaction.transaction_entries.each do |entry| %>
    <tr class="transaction-entry-info">
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td class="account"><%= link_to entry.account.name, entry.account if entry.account %></td>
      <td class="currency amount"><%= currency_format(entry.debit_amount) %></td>
    </tr>
  <% end %>
<% end.empty? %>
  <tr><td>No Transactions yet</td></tr>
<% end %>
</table>
