<h1>Login</h1>

<p>Not yet a user? <%= link_to 'Register now', new_user_path %></p>
<%= form_for @user_session, :url => {:action => "create"} do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %><br />
  <%= f.text_field :login, :tabindex => autotab %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password, :tabindex => autotab %><br />
  <br />
  <%= f.check_box :remember_me, :tabindex => autotab %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login", :tabindex => autotab %>
<% end %>
