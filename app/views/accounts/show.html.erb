<p id="notice"><%= notice %></p>

<h1>Showing Account - <%= @account.name %></h1>
<p>
  <b>Name:</b>
  <%= @account.name %>
</p>

<p>
  <b>Parent Account:</b>
  <%= @account.parent ? link_to(@account.parent.name, @account.parent) : 'Nil'  %>
</p>

<p>
  <b>Children Accounts:</b>
  <% if @account.children.each do |a| %>
        <%= link_to(a.name, a) %>
  <% end.empty?  %>
    Nil
  <% end %>
</p>

<p>
  <b>Opening Balance:</b>
  <%= number_with_precision(@account.opening_balance, :precision => 2, :delimiter => ',') %>
</p>

<p>
  <b>Current Balance:</b>
  <%= number_with_precision(@account.current_balance, :precision => 2, :delimiter => ',') %>
</p>


<%= link_to 'Edit', edit_account_path(@account) %> |
<%= link_to 'Back', accounts_path %>

<h1>List of Transactions</h1>
<%= link_to 'New Transaction', new_transaction_path %>
<%= render "transactions/transaction_entries", :transactions => @account.transactions %>
