  <tr class="account-level-<%= level %>">
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
    <td class="account-name"><%= link_to account.name, account %></td>
    <td class="currency account-currency"><%= link_to currency_format(account.current_balance), account %></td>
  </tr>
  <% if !account.children.empty? %>
    <%= render :partial => 'account', :collection => account.children, :locals => {:level => level + 1 } %>
  <% end %>
